{
    "name": "SalesForce Quick Actions Extension",
    "description": "Scrapes SFDC contacts page and sends data to local python server for processing",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["activeTab","tabs","scripting"],
    "host_permissions": ["https://citrite.my.salesforce.com/*"],
    "action": {
        "default_title": "SalesForce Actions",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/sfdc_16.png",
        "32": "/images/sfdc_32.png",
        "48": "/images/sfdc_48.png",
        "128": "/images/sfdc_128.png"
    }
}



